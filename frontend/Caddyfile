:80 {
    root * /srv

    route {
        # Проксирование API-запросов на backend
        # Аналогично настройке proxy в vite.config.ts:
        #   "/api" -> http://localhost:3000 (с обрезкой префикса /api)
        handle_path /api/* {
            reverse_proxy http://greenmapper-backend-app:3000
        }

        # Все остальные запросы обслуживаем как SPA (React / Vite)
        handle {
            try_files {path} /index.html
            file_server
        }
    }
}
